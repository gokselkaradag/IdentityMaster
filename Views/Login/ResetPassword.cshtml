@model ResetPasswordDto
@{
    ViewData["Title"] = "ResetPassword";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-lg p-4" style="background-color: #1c1c1e; color: #fff; max-width: 400px; width: 100%; border-radius: 10px;">
        <div class="text-center">
            <h3 class="mb-4">Şifre Sıfırlama</h3>
        </div>
        <form asp-action="ResetPassword" method="post">
            <input type="hidden" asp-for="Token" />
            <div class="form-group">
                <label asp-for="Email">Mail Adresinizi Giriniz</label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Password">Şifrenizi Giriniz</label>
                <input asp-for="Password" class="form-control" />
            </div>
            <br />
            <div class="form-group">
                <label asp-for="ConfirmPassword">Şifrenizi Tekrar Giriniz</label>
                <input asp-for="ConfirmPassword" class="form-control" />
            </div>
            <br />
            <button type="submit" class="btn btn-primary btn-block">Gönder</button>
            @if (@ViewBag.ErrorMessage != null)
            {
                <h1>@ViewBag.ErrorMessage</h1>
            }
        </form>
    </div>
</div>


